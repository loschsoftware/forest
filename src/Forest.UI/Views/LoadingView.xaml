<Window x:Class="Forest.UI.Views.LoadingView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="clr-namespace:AdonisUI;assembly=AdonisUI"
        SizeToContent="WidthAndHeight"
        ShowInTaskbar="False"
        WindowStyle="None"
        Title="{DynamicResource StringAppTitle}"
        Foreground="{DynamicResource {x:Static ui:Brushes.ForegroundBrush}}"
        WindowStartupLocation="CenterScreen">

    <Window.Effect>
        <DropShadowEffect/>
    </Window.Effect>

    <Border Padding="10"
            BorderBrush="{DynamicResource {x:Static ui:Brushes.Layer1BorderBrush}}"
            Background="{DynamicResource {x:Static ui:Brushes.Layer0BackgroundBrush}}">

        <TextBlock Text="{DynamicResource StringSetupIsStarting}"/>
    </Border>
</Window>