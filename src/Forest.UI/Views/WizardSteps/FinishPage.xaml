<Page x:Class="Forest.UI.Views.WizardSteps.FinishPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:lin="clr-namespace:Losch.Installer.Markup;assembly=lin"
      Title="{DynamicResource StringFinishPageTitle}">

    <Grid Margin="20">
        <StackPanel Orientation="Vertical">
            <TextBlock Text="{lin:String FinishPageBodyText}" TextWrapping="Wrap"/>

            <CheckBox Margin="0,15,0,0"
                      Content="{lin:String StartApplicationCheckBoxText}"
                      IsChecked="True"/>
        </StackPanel>
    </Grid>
</Page>